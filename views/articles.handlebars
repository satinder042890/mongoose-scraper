<div class="container-fluid">
  <nav class="navbar navbar-dark bg-dark">
    <img id="logopic" src="https://media.giphy.com/media/l0MYDzlBdiocY3UNq/giphy.gif">
    <h1 class="navbar-brand">Latest News With Mongoose Scrapper</h1>
    <form class="form-inline">
      <a href="/"><button class="btn btn btn-success mr-sm-2" type="button">Home Page</button></a>
      <a href="/saved"><button class="btn btn btn-success mr-sm-2" type="button">Saved Articles</button></a>
      <a href="/scrape"><button class="btn btn btn-success  my-2 my-sm-0" type="button">Scraped Articles</button></a>
    </form>
  </nav>
  <br>
  <br>
  <div class="container-fluid">
    <div class="alert alert-success text-center" role="alert">
      <h3>"{{data.title}}"</h3>
    </div>
    <br>
    <div class="row">
      <div class="col-6">
        <div class="card border-success mb-3">
          <div class="card-header text-white bg-success"><h4>Comment Section</h4></div>
          <div class="card-body text-success">
            <form>
              <div class="form-group">
                <h4><label for="formGroupExampleInput">Title</label></h4>
                <input type="text" id="title-note" class="form-control" placeholder="Title Of Note">
              </div><br>
              <div class="form-group">
                <h4><label for="formGroupExampleInput2">Comment</label></h4>
                <textarea class="form-control" id="note-description" rows="3" placeholder="Write Your Comment Here"></textarea>
              </div>
              <button id="submit-note" data-id={{data._id}} class="btn btn btn-success" type="button" style="float:right">Submit</button>
            </form>
          </div>
        </div>
      </div>

      <div class="col-6">
        <div class="card border-success mb-3">
          <div class="card-header text-white bg-success">
            <h4>Previous Comments</h4>
          </div>
          <div class="card-body text-success">

            {{#if data.note}}
            {{#each data.note}}
            <hr>
            <button data-id={{this._id}} id="delete-note" class="btn btn btn-success " type="button" style="float:right">Delete</button>
            <h4><strong>{{this.title}}</strong></h4>
            <h5>{{this.body}}</h5>
            <hr>
            {{/each}}
            {{else}}
            <h5>There are no comments on this article.</h5>
            {{/if}}
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
    